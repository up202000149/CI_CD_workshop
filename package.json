{
  "name": "continuous-newspaper",
  "type": "module",
  "version": "0.0.1",
  "scripts": {
    "dev": "astro dev",
    "start": "astro dev",
    "preview": "astro preview",
    "astro": "astro",
    "setup": "npm install && astro sync",
    "lint": "astro check --minimumFailingSeverity hint && npx @biomejs/biome lint",
    "build": "astro build",
    "format:check": "npx @biomejs/biome format",
    "format:write": "npx @biomejs/biome format --write"
  },
  "dependencies": {
    "@astrojs/check": "^0.9.4",
    "@astrojs/mdx": "^3.1.8",
    "@astrojs/tailwind": "^5.1.2",
    "astro": "^4.16.7",
    "bad-words": "^4.0.0",
    "tailwindcss": "^3.4.14",
    "typescript": "^5.6.3"
  },
  "devDependencies": {
    "@biomejs/biome": "1.9.4",
    "@tailwindcss/typography": "^0.5.15"
  }
}
